{% macro card(title, subtitle) %}
    <style>
        @media (min-width: 640px) {
            .card {
                width: 480px;
            }
            .bg-white.has-card {
                background-color: rgba(229,231,235,var(--bg-opacity));
            }
        }
    </style>
    <main class="mx-auto my-5 w-full card">
        <form id="form" method="POST">
            <div class="sm:shadow rounded-md">
                <div class="px-6 py-2 sm:py-6 bg-white rounded-t-md">
                    <div class="mb-2">
                        <h1 class="text-2xl font-medium leading-normal text-gray-900">
                            {{ title }}
                        </h1>
                        <p class="text-sm leading-normal text-gray-400">
                            {{ subtitle }}
                        </p>
                    </div>
                    {{ caller() }}
                </div>
                <div class="px-4 py-3 sm:bg-gray-50 text-right sm:p-6 rounded-b-md">
                    <button id="form-submit" class="ml-auto py-2 px-4 border flex border-transparent text-sm leading-5 font-medium rounded-md text-white bg-blue-600 shadow-sm hover:bg-blue-500 focus:outline-none focus:shadow-outline-blue active:bg-blue-600 transition duration-150 ease-in-out">
                        <svg class="button__loading-spinner" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        <span class="button__text">Next</span>
                        <span class="button__loading-text">Loading</span>
                    </button>
                </div>
            </div>
        </form>
    </main>
{% endmacro %}

{% macro link(label, destination) %}
    <div class="button-wrapper">
        <a href="{{ destination }}" class="button">
            {{ label }}
        </a>
    </div>
{% endmacro %}

{% macro button(label, id) %}
    <div class="button-wrapper">
        <button id="{{ id }}" class="button">
            <svg class="button__loading-spinner" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span class="button__text">{{ label }}</span>
            <span class="button__loading-text">Loading</span>
        </button>
    </div>
{% endmacro %}

{% macro splash(heading, subheading, caption) %}
    <div></div>
    <main class="splash">
        {% if caption %}
            <p class="text-md font-semibold tracking-wider leading-tight uppercase text-gray-400">
                {{ caption }}
            </p>
        {% endif %}
        <h1 class="text-2xl sm:text-4xl mt-1 mb-5 font-semibold leading-tight text-gray-900">
            {{ heading }}
        </h1>
        {% for line in subheading %}
            <p class="text-lg sm:text-2xl font-regular text-gray-500 {{ '' if loop.last else 'mb-3' }}">{{ line }}</p>
        {% endfor %}
    </main>
    {{ caller() }}
{% endmacro %}

{% macro timer(label, minutes, redirect_to) %}
    <p class="text-sm sm:text-base font-regular leading-tight text-gray-500">{{ label }}</p>
    <p class="text-xl sm:text-2xl font-light leading-tight text-gray-900 tabular-nums" data-timer-length="{{ minutes }}" data-timer-redirect="{{ redirect_to }}">
        {{ minutes }}:00
    </p>
{% endmacro %}