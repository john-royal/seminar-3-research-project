{% set page_title = "Register" %}
{% extends "_layout.njk" %}

{% block main %}
    {% call card(title = "Personal Information", subtitle = "We'll use this information to keep track of responses.") %}
    {{ input(type="text", name="name", label="Name", placeholder="Jane Doe") }}
    {{ input(type="email", name="email", label="Email address", placeholder="jane.doe@macaulay.cuny.edu") }}
    {% endcall %}
    <script>
        document.getElementById('form').onsubmit = e => {
            e.preventDefault()
            Turbolinks.visit('/survey')
        }
    </script>
{% endblock main %}