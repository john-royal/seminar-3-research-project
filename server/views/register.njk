{% set page_title = "Register" %}
{% set content_class = "content--has-card" %}
{% extends "shared/layout.njk" %}

{% block head_scripts %}
    <script src="/static/js/form.min.js"></script>
{% endblock head_scripts %}

{% block scripts %}
    <script>
        Form.configure('/register/profile', () => {
            Turbolinks.visit('/register/survey')
        })
    </script>
{% endblock scripts %}

{% block main %}
    {% call components.card(title = "Personal Information", subtitle = "We'll use this information to keep track of responses.") %}
    {{ forms.input(type="text", name="name", label="Name", placeholder="Jane Doe") }}
    {{ forms.input(type="email", name="email", label="Email address", placeholder="jane.doe@macaulay.cuny.edu") }}
    {% endcall %}
{% endblock main %}