{% macro s3rp_timer(label, minutes, redirect_to) %}
    <!-- Begin Timer -->
    <p class="text-base font-regular leading-tight text-gray-500">{{ label }}</p>
    <p class="text-2xl font-light leading-tight text-gray-900 tabular-nums" data-timer="{{ minutes }}" data-timer-redirect="{{ redirect_to }}">
        {{ minutes }}:00
    </p>
    <!-- End Timer -->
{% endmacro %}

{% macro s3rp_link(label, destination) %}
    <div class="my-8 h-12 mx-auto text-center">
        <a href="{{ destination }}" class="mx-auto rounded-md shadow px-8 py-3 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-500 focus:outline-none focus:border-blue-700 focus:shadow-outline-blue transition duration-150 ease-in-out sm:py-4 md:text-lg md:px-10">
            {{ label }}
        </a>
    </div>
{% endmacro %}

{% macro input(type, name, label, placeholder) %}
    <div class="py-2">
        <label for="{{ name }}" class="block text-sm font-medium leading-5 text-gray-700">{{ label }}</label>
        <input id="{{ name }}" type="{{ type }}" placeholder="{{ placeholder }}" class="mt-1 form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5">
    </div>
{% endmacro %}

{% macro card(title, subtitle) %}
    <style>
        @media (min-width: 640px) {
            .card {
                width: 480px;
            }
            .bg-white.has-card {
                background-color: rgba(229,231,235,var(--bg-opacity));
            }
        }
    </style>
    <main class="mx-auto my-5 w-full card">
        <form id="form" method="POST">
            <div class="rounded-md">
                <div class="px-6 py-2 sm:py-6 bg-white rounded-t-md">
                    <div class="mb-2">
                        <h1 class="text-2xl font-medium leading-normal text-gray-900">
                            {{ title }}
                        </h1>
                        <p class="text-sm leading-normal text-gray-400">
                            {{ subtitle }}
                        </p>
                    </div>
                    {{ caller() }}
                </div>
                <div class="px-4 py-3 sm:bg-gray-50 text-right sm:p-6 rounded-b-md">
                    <button class="m-auto py-2 px-4 border flex border-transparent text-sm leading-5 font-medium rounded-md text-white bg-blue-600 shadow-sm hover:bg-blue-500 focus:outline-none focus:shadow-outline-blue active:bg-blue-600 transition duration-150 ease-in-out">
                        Next
                    </button>
                </div>
            </div>
        </form>
    </main>
{% endmacro %}

